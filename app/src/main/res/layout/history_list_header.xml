<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="56dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/petProfileCard">
        <ImageView
            android:id="@+id/petProfileCardImage"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/camera" />

        <TextView
            android:id="@+id/petProfileCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME GOES HERE"
            android:layout_below="@id/petProfileCardImage"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/petProfileCardOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONWER GOES HERE"
            android:layout_below="@id/petProfileCardName"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</RelativeLayout>