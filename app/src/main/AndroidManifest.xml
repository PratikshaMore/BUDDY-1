<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cornez.buddy">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_paw"
        android:label="BUDDY"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.cornez.buddy.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cornez.buddy.AddHistoryActivity" />
        <activity android:name="com.cornez.buddy.AddPetActivity" />
        <activity android:name="com.cornez.buddy.PetListActivity" />
        <activity android:name="com.cornez.buddy.HistoryListActivity"/>
        <activity android:name="com.cornez.buddy.HistoryListItemPage"/>
        <activity android:name="com.cornez.buddy.HelpActivity"/>
    </application>

</manifest>